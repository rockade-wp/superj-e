generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String           @id @default(uuid())
  name                String
  email               String           @unique
  passwordHash        String
  role                Role             @default(OPERATOR)
  nip                 String           @unique
  tte_certificate_url String?
  refreshToken        String?
  createdAt           DateTime         @default(now())
  updatedAt           DateTime         @updatedAt

  // Relasi balik (required by Prisma)
  spjSubmissions      SpjSubmission[]
  signedForms         SignatureLog[]
  validatedSheets     VerificationSheet[] @relation("ValidatorRelation")
  verifiedSheets      VerificationSheet[] @relation("VerifierRelation")
  activityLogs ActivityLog[]
}

enum Role {
  ADMIN
  OPERATOR
  PPK
  PPTK
  PENGURUS_BARANG
  PPK_KEUANGAN
  PA
}

model SpjSubmission {
  id              String      @id @default(uuid())
  rupId           String
  year            Int
  activityName    String
  activity        String
  status          String      @default("draft")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  operatorId      String
  operator        User        @relation(fields: [operatorId], references: [id])
  forms           SpjForm[]
  verification    VerificationSheet? // <-- Hanya nama relasi, TANPA @relation(fields, references)
  activityLogs ActivityLog[]
}

model SpjForm {
  id                      String        @id @default(uuid())
  spjId                   String
  spjSubmission           SpjSubmission @relation(fields: [spjId], references: [id])
  formType                Int           // 1â€“11
  data                    Json
  physicalSignatureScanUrl String?
  physicalSignatureFileType String?
  status                  String        @default("filled")
  notes                   String?
  signatures              SignatureLog[]
}

model SignatureLog {
  id         String   @id @default(uuid())
  formId     String
  form       SpjForm  @relation(fields: [formId], references: [id])
  signerId   String
  signer     User     @relation(fields: [signerId], references: [id])
  signedAt   DateTime @default(now())
  tteMetadata String?
}

model VerificationSheet {
  id            String   @id @default(uuid())
  spjId         String   @unique
  spjSubmission SpjSubmission @relation(fields: [spjId], references: [id]) // <-- Hanya di sini
  validatorId   String?
  validator     User?    @relation("ValidatorRelation", fields: [validatorId], references: [id])
  verifierId    String?
  verifier      User?    @relation("VerifierRelation", fields: [verifierId], references: [id])
  status        String   @default("pending")
  notes         String?
  finalNotes String?
  signedAt      DateTime?
}

model ActivityLog {
  id        String   @id @default(uuid())
  spjId     String
  userId    String
  action    String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  spj       SpjSubmission @relation(fields: [spjId], references: [id])
}
